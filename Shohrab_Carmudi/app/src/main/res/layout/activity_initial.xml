<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shohrab.activity.InitialActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/activity_initial_txtTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#0a06f4"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/libraries"
        android:id="@+id/activity_initial_txtLibraries"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/activity_initial_txtTitle"
        android:textSize="14sp" />

    <Button android:id="@+id/activity_initial_BtnShowDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SHOW DB"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_below="@id/activity_initial_txtLibraries" />

    <Button android:id="@+id/activity_initial_BtnStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="START"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
